{
    "name": "boiler",
    "version": "1.0.0",
    "private": true,
    "description": "Boiler",
    "main": "src/index",
    "typings": "src/index",
    "scripts": {
        "prestart": "npm run build",
        "start": "node dist/index.js",
        "dev": "npx nodemon -e ts --exec \"ts-node -r tsconfig-paths/register src/index.ts\"",
        "create:migration": "node node_modules/db-migrate/bin/db-migrate --config database.json create",
        "migrate:down": "db-migrate reset -c 100 --config database.json",
        "migrate:up": "db-migrate up --config database.json",
        "create:seed": "db-migrate create:seed -c 100 --config database.json",
        "seed:down": "db-migrate reset:seed -c 100 --config database.json",
        "seed:up": "db-migrate up:seed --config database.json",
        "migrate:fresh": "npm run migrate_down && npm run migrate_up && npm run seed:down && npm run seed:up",
        "lint": "eslint --ext .ts,.json --max-warnings=0 src",
        "test": "cross-env NODE_ENV=test BOILER_DEV_PORT=9100 nyc --reporter=lcov --reporter=text --reporter=text-summary mocha -r ts-node/register -r tsconfig-paths/register src/test/index.ts --exit",
        "test:unit": "NODE_ENV=test nyc mocha -r ts-node/register -r tsconfig-paths/register --grep @unit src/**/*.spec.ts",
        "build": "rm -rf ./dist && npx tsc && npm i --only=prod",
        "docs": "node_modules/.bin/jsdoc -c jsdoc.json"
    },
    "author": "jeanvaljean",
    "license": "ISC",
    "dependencies": {
        "@types/body-parser": "^1.19.2",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/morgan": "^1.9.4",
        "bcrypt": "^5.0.0",
        "body-parser": "^1.20.2",
        "chai-http": "^4.3.0",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "db-migrate": "^0.11.13",
        "db-migrate-pg": "^1.2.2",
        "dotenv": "^8.6.0",
        "express": "^4.18.2",
        "express-validator": "^6.5.0",
        "helmet": "^3.23.3",
        "jsonwebtoken": "^8.5.1",
        "morgan": "^1.10.0",
        "pg-promise": "^11.4.3",
        "tsconfig-paths": "^3.9.0",
        "winston": "^3.7.2",
        "winston-papertrail": "git+https://github.com/kenperkins/winston-papertrail.git#v2"
    },
    "devDependencies": {
        "chai": "^4.3.7",
        "eslint": "^7.0.0",
        "eslint-config-google": "^0.14.0",
        "mocha": "^7.2.0",
        "nodemon": "^2.0.4",
        "nyc": "^15.0.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.6"
    }
}
